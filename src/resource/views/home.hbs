<div class="mt-4">
    <div class="row">

        {{#each course}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="margin-top: 16px;">
                <a href="/course/{{this.slug}}">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                <a href="/course/{{this.slug}}">

                    <h5 class="card-title none-text-decoration" >{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>